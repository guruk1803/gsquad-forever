{
  "info": {
    "name": "GsquaD Forever API",
    "description": "API collection for GsquaD Forever celebration platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Admin",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@gsquadforever.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/login",
              "host": ["{{base_url}}"],
              "path": ["admin", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('token', jsonData.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/admin/me",
              "host": ["{{base_url}}"],
              "path": ["admin", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Celebrations",
      "item": [
        {
          "name": "Get by Slug (Public)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/celebrations/slug/:slug",
              "host": ["{{base_url}}"],
              "path": ["celebrations", "slug", ":slug"],
              "variable": [{"key": "slug", "value": "marvel"}]
            }
          }
        },
        {
          "name": "Get All (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/celebrations",
              "host": ["{{base_url}}"],
              "path": ["celebrations"]
            }
          }
        },
        {
          "name": "Create (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Celebration\",\n  \"slug\": \"test-celebration\",\n  \"subtitle\": \"Test Subtitle\",\n  \"eventType\": \"wedding\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/celebrations",
              "host": ["{{base_url}}"],
              "path": ["celebrations"]
            }
          }
        }
      ]
    },
    {
      "name": "Wishes",
      "item": [
        {
          "name": "Get by Celebration (Public)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/wishes/celebration/:celebrationId",
              "host": ["{{base_url}}"],
              "path": ["wishes", "celebration", ":celebrationId"],
              "variable": [{"key": "celebrationId", "value": "1"}]
            }
          }
        },
        {
          "name": "Create Wish (Public)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"celebrationId\": 1,\n  \"name\": \"John Doe\",\n  \"message\": \"Congratulations!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/wishes",
              "host": ["{{base_url}}"],
              "path": ["wishes"]
            }
          }
        },
        {
          "name": "Get All (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/wishes",
              "host": ["{{base_url}}"],
              "path": ["wishes"]
            }
          }
        },
        {
          "name": "Approve Wish (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/wishes/:id/approve",
              "host": ["{{base_url}}"],
              "path": ["wishes", ":id", "approve"],
              "variable": [{"key": "id", "value": "1"}]
            }
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload Image (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/upload/image",
              "host": ["{{base_url}}"],
              "path": ["upload", "image"]
            }
          }
        }
      ]
    }
  ]
}

